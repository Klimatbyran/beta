---
import Layout from './Layout.astro'
import AuthorByline from '@/components/blog/AuthorByline.astro'
import BlogSidebar from '@/components/blog/BlogSidebar.astro'

interface Props {
  title: string
  author: string
  date: string
  description: string
}

const { title, author, date, description } = Astro.props
---

<Layout title={title}>
  <div class="container py-16">
    <div class="flex justify-between gap-16">
      <article class="max-w-2xl flex-1">
        <header class="mb-12">
          <h1 class="mb-3 text-4xl font-light tracking-tight lg:text-5xl">
            {title}
          </h1>
          <p class="text-xl leading-relaxed text-gray-200">{description}</p>
          <div class="mt-6 flex gap-2 text-sm font-medium text-gray-200">
            <span>{author}</span>
            <span>â€¢</span>
            <time datetime={date}
              >{new Date(date).toLocaleDateString('sv-SE')}</time
            >
          </div>
        </header>
        <div
          class="prose prose-lg prose-invert max-w-none prose-headings:font-light prose-h1:mt-12 prose-h1:text-4xl prose-h2:mt-10 prose-h2:text-3xl prose-h3:mt-8 prose-h3:text-2xl prose-h4:mt-6 prose-h4:text-xl prose-p:my-6 prose-a:text-blue-400 prose-a:hover:underline prose-blockquote:my-6 prose-blockquote:border-l-4 prose-blockquote:border-gray-700 prose-blockquote:pl-4 prose-strong:font-bold prose-em:italic prose-code:rounded prose-code:bg-gray-800 prose-code:px-1.5 prose-code:py-0.5 prose-pre:rounded-lg prose-pre:bg-gray-800 prose-pre:p-4 prose-ol:my-6 prose-ol:list-decimal prose-ol:pl-6 prose-ul:my-6 prose-ul:list-disc prose-ul:pl-6 prose-li:my-2 prose-table:my-8 prose-table:border-collapse prose-th:border prose-th:border-gray-700 prose-th:bg-gray-800 prose-th:p-2 prose-td:border prose-td:border-gray-700 prose-td:p-2 prose-img:my-8 prose-img:rounded-lg prose-hr:my-8 prose-hr:border-gray-700"
        >
          <slot />
        </div>
        <AuthorByline author={author} date={date} />
      </article>
      <BlogSidebar currentSlug={Astro.params.slug} />
    </div>
  </div>
</Layout>
